@article{RC_unification,
	title         = {An experimental unification of reservoir computing methods},
	author        = {D. Verstraeten and B. Schrauwen and M. D’Haene and D. Stroobandt},
	year          = 2007,
	journal       = {Neural Networks},
	volume        = 20,
	number        = 3,
