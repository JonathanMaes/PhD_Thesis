@article{FewMoleculeReservoir,
	title         = {Few- and single-molecule reservoir computing experimentally demonstrated with surface-enhanced Raman scattering and ion gating},
	author        = {Daiki Nishioka  and Yoshitaka Shingaya  and Takashi Tsuchiya  and Tohru Higuchi  and Kazuya Terabe},
	year          = 2024,
