@article{yun2023electrically,
	title         = {Electrically programmable magnetic coupling in an {I}sing network exploiting solid-state ionic gating},
	author        = {Yun, Chao and Liang, Zhongyu and Hrabec, Ale{\v{s}} and Liu, Zhentao and Huang, Mantao and Wang, Leran and Xiao, Yifei and Fang, Yikun and Li, Wei and Yang, Wenyun and Hou, Yanglong and Yang, Jinbo and Heyderman, Laura J. and Gambardella, Pietro and Luo, Zhaochu},
	year          = {2023},
