@article{RC_PassiveFrustratedNM,
	title         = {Passive frustrated nanomagnet reservoir computing},
	author        = {Edwards, Alexander J. and Bhattacharya, Dhritiman and Zhou, Peng and McDonald, Nathan R. and Misba, Walid Al and Loomis, Lisa and Garc{\'i}a-S{\'a}nchez, Felipe and Hassan, Naimul and Hu, Xuan and Chowdhury, Md. Fahim and Thiem, Clare D. and Atulasimha, Jayasimha and Friedman, Joseph S.},
