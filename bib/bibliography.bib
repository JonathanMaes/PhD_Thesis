@article{NanoarchitectonicAtomicSwitch,
	title         = {Nanoarchitectonic atomic switch networks for unconventional computing},
	author        = {Demis, Eleanor C. and Aguilera, Renato and Scharnhorst, Kelsey and Aono, Masakazu and Stieg, Adam Z. and Gimzewski, James K.},
