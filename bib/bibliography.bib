@article{Hu2023,
	title         = {Distinguishing artificial spin ice states using magnetoresistance effect for neuromorphic computing},
	author        = {Hu, Wenjie and Zhang, Zefeng and Liao, Yanghui and Li, Qiang and Shi, Yang and Zhang, Huanyu and Zhang, Xumeng and Niu, Chang and Wu, Yu and Yu, Weichao and Zhou, Xiaodong and Guo, Hangwen and Wang, Wenbin and Xiao, Jiang and Yin, Lifeng and Liu, Qi and Shen, Jian},
	year          = {2023},
