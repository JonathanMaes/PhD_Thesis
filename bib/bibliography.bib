	author        = {Jensen, Johannes H. and Str{\o}mberg, Anders and Breivik, Ida and Penty, Arthur and Ni{\~{n}}o, Miguel Angel and Khaliq, Muhammad Waqas and Foerster, Michael and Tufte, Gunnar and Folven, Erik},
