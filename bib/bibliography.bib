@article{AttemptFreqTemperature,
	title         = {Implications of a temperature-dependent magnetic anisotropy for superparamagnetic switching},
	author        = {Martin Stier and Alexander Neumann and André Philippi-Kobs and Hans Peter Oepen and Michael Thorwart},
	year          = 2018,
	journal       = {Journal of Magnetism and Magnetic Materials},
