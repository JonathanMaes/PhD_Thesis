@article{NEB_geodesic,
	title         = {Method for finding mechanism and activation energy of magnetic transitions, applied to skyrmion and antivortex annihilation},
	author        = {Pavel F. Bessarab and Valery M. Uzdin and Hannes Jónsson},
	year          = 2015,
