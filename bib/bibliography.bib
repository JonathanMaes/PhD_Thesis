@article{DynamicEmergence_NanomagneticSystem,
	title         = {Dynamically Driven Emergence in a Nanomagnetic System},
	author        = {Dawidek, Richard W. and Hayward, Thomas J. and Vidamour, Ian T. and Broomhall, Thomas J. and Venkat, Guru and Mamoori, Mohanad Al and Mullen, Aidan and Kyle, Stephan J. and Fry, Paul W. and Steinke, Nina-Juliane and Cooper, Joshaniel F. K. and Maccherozzi, Francesco and Dhesi, Sarnjeet S. and Aballe, Lucia and Foerster, Michael and Prat, Jordi and Vasilaki, Eleni and Ellis, Matthew O. A. and Allwood, Dan A.},
