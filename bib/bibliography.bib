@article{Budrikis2012,
	title         = {Domain dynamics and fluctuations in artificial square ice at finite temperatures},
	author        = {Budrikis, Z and Livesey, K L and Morgan, J P and Akerman, J and Stein, A and Langridge, S and Marrows, C H and Stamps, R L},
	year          = {2012},
	month         = {mar},
	journal       = {New Journal of Physics},
