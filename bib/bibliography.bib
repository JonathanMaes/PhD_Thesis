	author        = {Wang, Zhongrui and Joshi, Saumil and Savel'ev, Sergey and Song, Wenhao and Midya, Rivu and Li, Yunning and Rao, Mingyi and Yan, Peng and Asapu, Shiva and Zhuo, Ye and Jiang, Hao and Lin, Peng and Li, Can and Yoon, Jung Ho and Upadhyay, Navnidhi K. and Zhang, Jiaming and Hu, Miao and Strachan, John Paul and Barnell, Mark and Wu, Qing and Wu, Huaqiang and Williams, R. Stanley and Xia, Qiangfei and Yang, J. Joshua},
	year          = {2018},
